
@{
    ViewBag.Title = "UserAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEAD-->
       
        <!-- END PAGE BREADCRUMB -->
        <!-- BEGIN PAGE BASE CONTENT -->
        <div class="row" ng-controller="GetAllUserAdminCTRL">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-red"></i>
                            <span class="caption-subject font-red sbold uppercase">User Admin</span>
                        </div>

                    </div>
                    <div class="portlet-body">
                        <div class="table-toolbar">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="btn-group">

                                        <a onclick="window.location.href = '/Admin/CreateUser/'" ; class="button btn green">Add New  <i class="fa fa-plus"></i></a>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered" ng-table="tableParams">

                                <tbody>

                                    <tr ng-repeat="c in $data">
                                        <td title="'#'" sortable="'Id'"> {{$index+1}} </td>
                                        <td title="'Username'" filter="{ Username: 'text'}" sortable="'Username'"> {{c.Username}} </td>
                                        <td title="'NameSurname'" filter="{ NameSurname: 'text'}" sortable="'NameSurname'"> {{c.NameSurname}} </td>
                                        <td title="'Email'" filter="{ Email: 'text'}" sortable="'Email'"> {{c.Email}} </td>
                                        <td title="'Role'" filter="{ Role: 'text'}" sortable="'Role'"> {{c.Role}} </td>
                                        <td title="'PhoneNumber'" filter="{ PhoneNumber: 'text'}" sortable="'PhoneNumber'"> {{c.PhoneNumber}} </td>
                                        <td title="'IdentityNumber'" filter="{ IdentityNumber: 'text'}" sortable="'IdentityNumber'"> {{c.IdentityNumber}} </td>
                                        @*<td title="'ConfirmEmail'"><input type="checkbox" ng-checked="c.ConfirmEmail == true"></td>*@

                                        <td>
                                            <a class="edit" data-id="{{c.Id}}" ng-click="GoEditDetail(c.Id)"> Edit </a>
                                        </td>
                                        <td>
                                            <a class="delete" data-id="{{c.Id}}" ng-click="deletedata($event)"> Delete </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
        <!-- END PAGE BASE CONTENT -->
    </div>
    <!-- END CONTENT BODY -->
</div>
<!-- END CONTENT -->
<!-- BEGIN QUICK SIDEBAR -->



@section PageScript
{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/MyScripts/Admin/UserAdminController.js"></script>
}

