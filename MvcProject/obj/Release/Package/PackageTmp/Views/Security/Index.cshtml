<body sty class=" login" ng-app="ProjectApp" ng-controller="SecurityCTRL">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="~/MetronicAdmin/assets/pages/img/logo-big-curator.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" ng-submit="postdata(Username,Password,RememberMe)" method="post">
            <h3 class="form-title font-green">Giriş</h3>

            <div class="form-group has-error" ng-show="usernamePasswordSituation==true">
                <span id="username-error-ux" class="help-block"></span>
            </div>
            <div class="form-group has-error" ng-show="userAuthentication==true">
                <span id="username-error-uxEmpty" class="help-block"></span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="text" ng-enter="postdata(Username,Password,RememberMe)" ng-change="chekUsername()" ng-model="Username" autocomplete="off" placeholder="Kullanıcı Adı" name="username" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" ng-enter="postdata(Username,Password,RememberMe)" ng-change="chekUsername()" ng-model="Password" autocomplete="off" placeholder="Şifreniz" name="password" />
            </div>
            <div class="form-actions">
                <a class="btn green uppercase" ng-click="postdata(Username,Password,RememberMe)">GİRİŞ</a>
                <label class="rememberme check mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" ng-model="RememberMe" name="remember" />Beni Hatırla
                    <span></span>
                </label>
                <a href="javascript:;" id="forget-password" class="forget-password">
                    Şifremi Unuttum ?
                </a>
            </div>

            <div class="create-account">
                <p>
                    <a href="javascript:;" id="register-btn" class="uppercase">Kayıt Ol</a>
                </p>
            </div>
        </form>
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="forget-form" method="post">
            <h3 class="font-green">Şifremi Unuttum ?</h3>
            <p>Şifrenizi sıfırlamak için aşağıya e-mail adresinizi giriniz. </p>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Email *</label>
                <input class="form-control" type="text" placeholder="Email *" ng-enter="ForgetEmail(RememberEmail)" ng-change="checkForgetEmail()" ng-model="RememberEmail" />
                <div class="form-group has-error" ng-show="emailForgetSituation==true">
                    <span id="email-error-forget" class="help-block"></span>
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn green btn-outline">GERİ</button>
                <a type="submit" ng-disabled="emailForgetSituation==true" ng-click="ForgetEmail(RememberEmail)" class="btn btn-success uppercase pull-right">GÖNDER</a>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
        <!-- BEGIN REGISTRATION FORM -->
        <form class="register-form" ng-submit="checkAllRegister(NameSurname,Email)" method="post">
            <h3 class="font-green">Kayıt Ol</h3>
            <p class="hint"> Kişisel Bilgilerinizi Giriniz: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">TC Kimlik Numaranız</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="TC Kimlik Numarası" ng-model="IdentityNumber" name="IdentityNumber" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Ad Soyad *</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Ad Soyad *" ng-change="checkRegisterNameSurname()" ng-model="NameSurname" name="NameSurname" />
                <div class="form-group has-error" ng-show="nameSurnameRegisterSituation==true">
                    <span id="namesurname-error-register" class="help-block"></span>
                </div>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Email *</label>
                <input class="form-control" type="text" placeholder="Email *" ng-change="checkRegisterEmail()" ng-model="Email" />
                <div class="form-group has-error" ng-show="emailRegisterSituation==true">
                    <span id="email-error-register" class="help-block"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Açık Adress</label>
                <input id="phone" name="phone" type="text" ng-change="checkRegisterPhone()" ng-model="PhoneNumber" class="form-control placeholder-no-fix">
                <div class="form-group has-error" ng-show="phoneRegisterSituation==true">
                    <span id="phone-error-register" class="help-block"></span>
                </div>

            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Açık Adress</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Açık Adres" ng-model="Address" name="Address" />
            </div>


            <p class="hint"> Hesap Bilgilerinizi Giriniz: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Kullanıcı Adı *</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Kullanıcı Adı *" ng-change="checkRegisterUsername()" ng-model="Username" name="NameSurname" />
                <div class="form-group has-error" ng-show="usernameRegisterSituation==true">
                    <span id="username-error-register" class="help-block"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Şifre *</label>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" ng-change="checkRegisterPassword()" ng-model="Password" id="register_password" placeholder="Şifre *" />
                <div class="form-group has-error" ng-show="passwordRegisterSituation==true">
                    <span id="password-error-register" class="help-block"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Şifre Tekrar *</label>
                <input class="form-control placeholder-no-fix" type="password" ng-change="checkRegisterConfirmPassword()" ng-model="ConfirmPassword" autocomplete="off" placeholder="Şifre Tekrar *" />
                <div class="form-group has-error" ng-show="confirmPasswordRegisterSituation==true">
                    <span id="confirmemail-error-register" class="help-block"></span>
                </div>
            </div>


            <div class="form-actions">
                <button type="button" id="register-back-btn" class="btn green btn-outline">GERİ</button>
                @*<button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Kayıt Ol</button>*@
                <button class="btn btn-success uppercase pull-right" data-toggle="modal" data-UserRefId="" data-Id="" id="contactAddress"
                        data-target="#userContactUpdatePopup" ng-disabled="nameSurnameRegisterSituation==true || emailRegisterSituation==true || phoneRegisterSituation==true || usernameRegisterSituation==true || passwordRegisterSituation==true || confirmPasswordRegisterSituation==true" ng-click="checkAllRegister(NameSurname,Email,PhoneNumber,Username,Password,ConfirmPassword)">
                    Kayıt Ol
                </button>
            </div>
        </form>
        <!-- END REGISTRATION FORM -->
        <div id="userContactUpdatePopup" class="modal fade" tabindex="-1" aria-hidden="true">

            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="javascript:;" class="close" data-dismiss="modal" aria-hidden="true"></a>
                        <h4 class="modal-title" ng-show="emailCheckControl ==0 && usernameCheckControl ==0">Telefon Numarası Doğrulama</h4>
                        <h4 class="modal-title" ng-show="emailCheckControl ==1 || usernameCheckControl ==1">Bu Email Adresi veya Kullanıcı Adı Zaten Kayıtlıdır.</h4>
                    </div>
                    <div class="modal-body" ng-show="emailCheckControl ==0 && usernameCheckControl ==0">
                        <form action="#" class="form-horizontal">
                            <div class="well"> Telefon numaranıza gönderdiğimiz mesajdaki doğrulama kodunu, lütfen aşağıdaki 'Doğrulama Kodu' kutusuna yazıp, 'Doğrula' butonuna basınız. </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Doğrulama Kodu</label>
                                <div class="col-md-5">

                                    <input type="text" class="form-control" name="Password" ng-model="PhoneConfirmCode" placeholder="Doğrulama Kodu" />

                                </div>
                                <a href="javascript:;" id="forget-password" class="forget-password col-md-4">
                                    Tekrar Şifre Al
                                </a>
                            </div>
                        </form>
                    </div>
                    <div class="modal-body" ng-show="emailCheckControl ==1 || usernameCheckControl ==1">
                        <form action="#" class="form-horizontal">
                            <div class="well"> Mail adresiniz veya kullanıcı adınız zaten kullanımdadır. Lütfen giriş butonuna tıklayarak giriş yapınız ya da şifrenizi unuttuysanız giriş butonuna tıkladıktan sonra şifremi unuttum? diyebilirsiniz. </div>
                         
                        </form>
                    </div>
                    <div class="modal-footer" ng-show="emailCheckControl ==0 && usernameCheckControl ==0">
                        <a href="javascript:;" class="btn grey-salsa btn-outline" data-dismiss="modal">Kapat</a>
                        <button id="btnRegisterDisable" ng-click="registerPostData(IdentityNumber,NameSurname,Email,PhoneNumber,Address,Username,Password,ConfirmPassword,PhoneConfirmCode)" class="btn green">
                            <i class="fa fa-check"></i> Doğrula
                        </button>
                    </div>
                    <div class="modal-footer" ng-show="emailCheckControl ==1 || usernameCheckControl ==1">
                        <a href="javascript:;" class="btn grey-salsa btn-outline" data-dismiss="modal">Kapat</a>
                        <a onclick="window.location.href = '/Security/'"; class="btn green">
                           GİRİŞ
                        </a>
                    </div>
                </div>
            </div>

        </div>
