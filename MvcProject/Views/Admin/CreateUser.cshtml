
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@section PageCSS
{


    <link href="~/MetronicAdmin/assets/build/css/intlTelInput.css" rel="stylesheet" />


}
<div class="page-content-wrapper">

    <div class="page-content">

      

            

        

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN VALIDATION STATES-->
                <div class="portlet light portlet-fit portlet-form bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-bubble font-green"></i>
                            <span class="caption-subject font-green bold uppercase">Add User</span>
                        </div>

                    </div>
                    <div class="portlet-body">
                        <!-- BEGIN FORM-->
                        <form method="post" id="form_sample_2" class="form-horizontal" ng-controller="GetAllUserAdminCTRL">
                            <div class="form-body">


                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        Username
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" ng-model="Username" ng-change="checkRegisterUsername()" class="form-control" name="Username" />
                                            <div class="form-group has-error" ng-show="usernameRegisterSituation==true">
                                            <span id="username-error" class="help-block">Kullanıcı Adı Boş Bırakılamaz.</span>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        Email
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" ng-model="Email" class="form-control" ng-change="checkRegisterEmail()" name="Email" />
                                            <div class="form-group has-error" ng-show="emailRegisterSituation==true">
                                                <span id="username-error" class="help-block">Email Adresi Boş Ya Da Formata Uygun Değil</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        Password
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" ng-model="Password" ng-change="checkRegisterPassword()" class="form-control" name="Password" />
                                            <div class="form-group has-error" ng-show="passwordRegisterSituation==true">
                                                <span id="username-error" class="help-block">Şifre Boş Bırakılamaz.</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        Ad Soyad
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" ng-model="NameSurname" class="form-control" ng-change="checkRegisterNameSurname()" name="NameSurname" />
                                            <div class="form-group has-error" ng-show="nameSurnameRegisterSituation==true">
                                                <span id="username-error" class="help-block">Ad Soyad Boş Bırakılamaz..</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        Address
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" ng-model="Address" class="form-control" name="Address" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        IdentityNumber
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" ng-model="IdentityNumber" class="form-control" name="IdentityNumber" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        Phone Number
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input id="phone" name="phone" type="tel" ng-model="PhoneNumber" ng-change="checkRegisterPhone()" class="form-control">
                                            <div class="form-group has-error" ng-show="phoneRegisterSituation==true">
                                                <span id="username-error" class="help-block">Telefon Numarası Boş Ya Da Formata Uygun Değil</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        Tax Administration
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" ng-model="TaxAdministration" class="form-control" name="Password" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group  margin-top-20">
                                    <label class="control-label col-md-3">
                                        Tax Number
                                    </label>
                                    <div class="col-md-4">
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" ng-model="TaxNumber" class="form-control" name="Password" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="submit" id="btnDisabled" ng-disabled="nameSurnameRegisterSituation==true || emailRegisterSituation==true || phoneRegisterSituation==true || usernameRegisterSituation==true || passwordRegisterSituation==true" ng-click="postdata(Username,Email,Password,NameSurname,Address,IdentityNumber,PhoneNumber,TaxAdministration,TaxNumber)" class="btn green">Submit</button>
                                        <button type="reset" class="btn default">Clear</button>
                                    </div>
                                </div>
                            </div>
                            <button type="button" class="btn btn-default" onClick="location.href='/Admin/UserAdmin/'">User List</button>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
                <!-- END VALIDATION STATES-->
            </div>
        </div>
        <script src="~/MetronicAdmin/assets/build/js/utils.js"></script>

        <script src="~/MetronicAdmin/assets/build/js/intlTelInput.js"></script>

        <script>
            var input = document.querySelector("#phone");
            var dialCodeValue = window.intlTelInput(input, {
                separateDialCode: true,

                preferredCountries: ["tr"],
                initialCountry: "auto",
                geoIpLookup: function (callback) {
                        callback("tr");
                },


                utilsScript: "~/MetronicAdmin/assets/build/js/utils.js",
            });

            
        </script>

        @section PageScript
{


            <script src="~/MetronicAdmin/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
            <script src="~/MetronicAdmin/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>

            <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
            <script src="~/MyScripts/Admin/UserAdminController.js"></script>
        }


