<body class="">
    <div class="page-lock">
        <div class="page-logo">
            <a class="brand" href="index.html">
                <img src="~/MetronicAdmin/assets/pages/img/logo-big.png" alt="logo" />
            </a>
        </div>

        <div class="page-body" ng-app="ProjectApp" ng-controller="ResetCTRL">
            <div class="lock-head"> Yeni Şifre Oluştur </div>
            <div class="lock-body">
                <div class="lock-cont">
                    <div class="lock-item">
                        <div class="pull-left lock-avatar-block">
                            <img src="~/MetronicAdmin/assets/pages/media/profile/empty-avatar.png" class="lock-avatar">
                        </div>
                    </div>
                    <div class="lock-item lock-item-full">
                        <form class="lock-form pull-left" action="index.html" method="post">
                            @*<h4>Amanda Smith</h4>*@

                            <div class="form-group">
                                <label class="control-label visible-ie8 visible-ie9">Şifre *</label>
                                <input class="form-control placeholder-no-fix ng-pristine ng-untouched ng-valid ng-empty" type="password" autocomplete="off" ng-change="checkResetPassword()" ng-model="Password" name="password" placeholder="Şifre *" />
                                <div class="form-group has-error" ng-show="passwordResetSituation==true">
                                    <span id="password-error-reset" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label visible-ie8 visible-ie9">Şifre Tekrar *</label>
                                <input class="form-control placeholder-no-fix" type="password" ng-change="checkResetConfirmPassword()" ng-model="ConfirmPassword" autocomplete="off" placeholder="Şifre Tekrar *" />
                                <div class="form-group has-error" ng-show="confirmPasswordResetSituation==true">
                                    <span id="confirmemail-error-reset" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-actions">
                                <a type="submit" class="btn red uppercase" ng-disabled="passwordResetSituation==true || confirmPasswordResetSituation==true" ng-click="ResetPasswordNow(Password,ConfirmPassword)">DEĞİŞTİR</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <div class="page-footer-custom"> 2014 &copy; Metronic. Admin Dashboard Template. </div>
    </div>
